<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.tate.loginfbla.HomeActivity"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name3"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_users"
        android:textSize="20sp"
        android:gravity="left"
        android:layout_marginTop="75dp"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        android:id="@+id/welcome_txt"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewlisting_btn"
        style="?android:textAppearanceSmall"
        android:gravity="center"
        android:layout_below="@+id/welcome_txt"
        android:layout_marginTop="35dp"
        android:id="@+id/view_listing_btn"
        android:background="@drawable/button_selector" />
</LinearLayout>
